<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_grad_theme">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"


            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="15dp"
            android:src="@drawable/back_button" />

        <Button
            android:id="@+id/editBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"


            android:layout_marginStart="10dp"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/pt_sans_caption_bold"
            android:text="EDIT"
            android:textStyle="bold"
            app:backgroundTint="#F595B8"
            tools:ignore="NotSibling" />


    </RelativeLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/rounded_corner_card"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:padding="10dp"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/subject_attendance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"

                android:fontFamily="@font/pt_sans_caption"
                android:padding="10dp"
                android:text="Attendance (10%)"
                android:textColor="#F57C00"
                android:textColorHint="#FF676767"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/attendanceEdt"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/pt_sans_caption_bold"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:text="10"
                android:textColor="#F57C00"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:padding="10dp"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/menu_midterm" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:ems="10"

                android:fontFamily="@font/pt_sans_caption"
                android:padding="10dp"
                android:text="Progess (30%)"
                android:textColor="#388E3C"
                android:textColorHint="#FF676767"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/midtermEdt"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/pt_sans_caption_bold"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:text="10"
                android:textColor="#388E3C"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:padding="10dp"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/subject_final" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/pt_sans_caption"
                android:padding="10dp"
                android:text="Final (60%)"
                android:textColor="#0288D1"
                android:textColorHint="#FF676767"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/finalEdt"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/pt_sans_caption_bold"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:text="10"
                android:textColor="#0288D1"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>





    </LinearLayout>




</LinearLayout>

