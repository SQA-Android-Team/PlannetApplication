<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HelpAndFeedbacksActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_grad_theme">


        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            android:src="@drawable/back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Give Us Feedback"
            android:textAlignment="center"
            android:textColor="#90000000"
            android:textSize="40dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/subjectFb"
            android:layout_width="325dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_fb_help_backgr"
            android:hint="Subject"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/emailFb"
            android:layout_width="325dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_fb_help_backgr"
            android:hint="Your email "
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/questionFb"
            android:layout_width="325dp"
            android:layout_height="122dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_fb_help_backgr"
            android:hint="How can we help you? "
            android:paddingLeft="20dp" />

        <Button
            android:id="@+id/sendFb_Btn"
            android:layout_width="231dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corners_sendfb"
            android:text="Send feedback"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="@color/gradient" />
    </LinearLayout>
</LinearLayout>
